<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:padding="8dp"
                                             android:background="@drawable/grid_item_background">

    <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp" tools:text="Hello this is a post from hmac, meh meh meh, let's go fishing"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintVertical_bias="0.75"/>

    <TextView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:layout_marginBottom="4dp" android:textSize="14sp"
            tools:text="hammyalexmac" android:textStyle="bold" android:textColor="@color/black"/>

</android.support.constraint.ConstraintLayout>